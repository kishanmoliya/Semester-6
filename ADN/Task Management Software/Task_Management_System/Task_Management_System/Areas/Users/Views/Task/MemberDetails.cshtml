@using Task_Management_System.BAL;
@model System.Data.DataTable;
@{
    Layout = "_Layout_Header";
}
<h3 class="mt-3">Member Details</h3>
<div class="Container">
    <div class="table-data">
        <table class="table table-hover">
            <tbody>
                    <div class="card shadow mt-3 bg-white rounded">
                        <div class="card-body">
                            @foreach (System.Data.DataRow data in Model.Rows)
                            {
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Name:    </span>@data["MemberName"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Contact:    </span>@data["MemberContact"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Email:     </span>@data["MemberEmail"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Role: </span> @data["MemberRole"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Technology:    </span> @data["MemberTechnology"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Age:    </span> @data["MemberAge"]</h6>
                                <h6 class="list-group-item list-group-item-action d-flex"><span class="w-25">Member Salary:    </span> @data["MemberSalary"]</h6>
                            }
                        </div>
                    </div>               
            </tbody>
        </table>
    </div>
    <a class="btn btn-secondary" asp-area="Users" asp-controller="Task" asp-action="TaskDetails" asp-route-TaskID="@UrlEncryptor.Encrypt(CommonVariables.TaskID.ToString())">Back</a>
</div>






