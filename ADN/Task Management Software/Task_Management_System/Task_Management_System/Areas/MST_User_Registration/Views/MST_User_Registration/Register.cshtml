@model Task_Management_System.Areas.MST_User_Registration.Models.UserModel

@{
    Layout = "_Layout";
}


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-2">Create an Account</h2>
            <div class="card my-4">
                <form asp-action="Register" class="card-body cardbody-color p-lg-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label" for="form3Example1cg">Your Name</label>
                        <input asp-for="UserName" type="text" class="form-control mt-1" id="Username" aria-describedby="emailHelp"
                               placeholder="Name" />
                        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="text" class="form-control mt-1" id="Username" aria-describedby="emailHelp"
                               placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control mt-1" id="password" placeholder="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center"><button type="submit" class="btn btn-outline-dark px-5 mb-5 w-100">Register</button></div>

                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Have already an account? <a asp-area="MST_User_Registration" asp-controller="MST_User_Registration" asp-action="Index" class="text-dark fw-bold">
                            Login here
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}