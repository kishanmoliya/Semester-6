@model Task_Management_System.Areas.MST_User_Registration.Models.UserModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}

<div class="container right-panel-active">
    <!-- Sign Up -->
    <div class="container__form container--signup">
        <form asp-action="Register" class="form" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 class="form__title">Sign Up</h2>

            <label asp-for="UserName" class="form-label" for="form3Example1cg">Your Name</label>
            <input asp-for="UserName" type="text" placeholder="Your Name" class="input" />
            <div><span asp-validation-for="UserName" class="text-danger"></span></div>

            <label asp-for="Email" class="form-label" for="form3Example3cg">Your Email</label>
            <input asp-for="Email" type="email" placeholder="Email" class="input" />
            <div><span asp-validation-for="Email" class="text-danger"></span></div>

            <label asp-for="Password" class="form-label" for="form3Example4cg">Password</label>
            <input asp-for="Password" type="password" placeholder="Password" class="input" />
            <div> <span asp-validation-for="Password" class="text-danger"></span></div>

            <button type="submit" class="btn">Sign Up</button>
        </form>
    </div>

    <!-- Sign In -->
    <div class="container__form container--signin">
        <form asp-area="MST_User_Registration" asp-controller="MST_User_Registration" asp-action="Login" class="form" id="form2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 class="form__title">Sign In</h2>

            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" type="email" placeholder="Email" class="input" />
            <span asp-validation-for="Email" class="text-danger"></span>


            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" placeholder="Password" class="input" />
            <span asp-validation-for="Password" class="text-danger"></span>


            <a href="#" class="link">Forgot your password?</a>
            <button type="submit" class="btn">Sign In</button>
        </form>
    </div>

    <!-- Overlay -->
    <div class="container__overlay">
        <div class="overlay">
            <div class="overlay__panel overlay--left">
                <button class="btn" id="signIn">Sign In</button>
            </div>
            <div class="overlay__panel overlay--right">
                <button class="btn" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>



